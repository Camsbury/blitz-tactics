<% content_for(:title) { "Speedrun mode" } %>

<section class="speedrun-mode">
  <div class="container">
    <div class="board-area-container">
      <%= render partial: "puzzle_player/above_board" %>
      <div class="speedrun-complete invisible">
        Speedrun complete!
      </div>

      <%= render partial: "puzzle_player/board_area" %>
    </div>

    <aside class="speedrun-sidebar">
      <div class="speedrun-stats current-run">
        <div class="timer stopped">0:00.0</div>
        <div class="description"></div>
      </div>

      <div class="speedrun-stats personal-best invisible">
        <div class="timer"></div>
        <div class="description">Personal best</div>
      </div>

      <div class="speedrun-instructions">
        Make a move to start the timer
      </div>
    </aside>
  </div>
</section>

<script>
  blitz.loggedIn = <%= current_user ? true : false %>;
</script>
