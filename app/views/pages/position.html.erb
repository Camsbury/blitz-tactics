<% content_for(:title) { "Position trainer" } %>

<div class="position-trainer container">
  <div class="instructions invisible"></div>
  <div class="chessground-board">
    <div class="piece-promotion-modal-container"></div>
    <div class="chessground"></div>
  </div>

  <div class="actions">
    <button class="button restart">Reset position</button>
  </div>
</div>

<script>
  document.addEventListener(`DOMContentLoaded`, () => {
    blitz.position = {
      fen: "<%= @position.fen %>",
      goal: "<%= @position.goal %>"
    }
  })
</script>
