<% content_for(:title) { "Scoreboard" } %>

<div class="container">
  <div class="scoreboard">
    <h2>Scoreboard</h2>

    <div class="scores">
      <% @ranked_users.each do |user| %>
        <div class="user">
          <div class="username">
            <a href="/<%= user.username %>"><%= user.username %></a>
          </div>
          <div class="max-level"><%= user.num_repetition_levels_unlocked %></div>
        </div>
      <% end %>
    </div>
  </div>
</div>
