// new homepage

.homepage 
  margin-bottom 100px

  h2 
    font-size 20px
    opacity 0.6
    text-align center
    margin 30px 0 50px

  .game-modes 
    display flex
    justify-content center
    margin-bottom 60px

  .mode 
    text-align center
    padding 0 10px
    margin 0 15px
    display flex
    align-items center
    flex-direction column

    h3 
      font-size 30px
      margin-bottom 15px

      a 
        color inherit
        text-decoration none
        transition color 0.15s ease

        &:hover 
          color #ffe800

    .game-mode-description
      opacity 0.5
      font-size 14px
      line-height 20px
      margin-bottom 25px
      width 300px

    .under-mini-board 
      font-size 16px
      margin-top 20px
      color rgba(250, 250, 250, 0.5)
      transition opacity 0.15s ease

      a
        color rgba(250, 250, 250, 0.8)
        text-decoration none

        &:hover 
          text-decoration underline

  .miniboard-link
    display block
    transition all 0.15s ease

    &:hover
      box-shadow 0 0 7px #ffe800

      .mini-chessboard
        border 1px solid #ffe800

    a
      display block

  .mini-chessboard 
    display block
    width 250px
    height 250px
    margin 0 auto
    transition border 0.15s ease
