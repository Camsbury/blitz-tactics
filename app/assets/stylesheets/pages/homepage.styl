// new homepage

.homepage 
  margin-bottom 100px

  h2 
    font-size 20px
    opacity 0.6
    text-align center
    margin 30px 0 50px

  .game-modes-container
    display flex

  .game-modes
    width 50%

  .mode 
    text-align center
    padding 0 10px
    margin 0 15px 45px
    display flex
    align-items center
    flex-direction column

    h3 
      font-size 30px
      margin-bottom 15px

      a 
        color inherit
        text-decoration none
        transition color 0.15s ease

        &:hover 
          color #ffe800

    .game-mode-description
      opacity 0.5
      font-size 14px
      line-height 20px
      margin-bottom 25px
      width 300px

    .under-mini-board 
      font-size 16px
      margin-top 20px
      color rgba(250, 250, 250, 0.5)
      transition opacity 0.15s ease
      width 250px
      height 50px

      a
        color rgba(250, 250, 250, 0.8)
        text-decoration none

        &:hover 
          text-decoration underline

      // countdown + speedrun
      .your-best-times
        margin-bottom 7px

      .best-time
        color rgba(250, 250, 250, 0.8)

  .miniboard-link
    display block
    transition all 0.15s ease

    &:hover
      box-shadow 0 0 7px #ffe800

      .mini-chessboard
        border 1px solid #ffe800

    a
      display block

  // scores at the bottom of the page
  .mini-chessboard
    display block
    width 250px
    height 250px
    margin 0 auto
    transition border 0.15s ease

  .mini-scoreboard
    display flex
    margin 0 auto
    justify-content space-between

    // past 7 days, yesterday, today
    h6
      color rgba(250, 250, 250, 0.25)
      margin-bottom 30px

    .top-players
      margin 10px 0 30px
      font-size 14px

      // headings for stats
      h5
        color rgba(250, 250, 250, 0.4)
        margin-bottom 5px

    .ranking
      padding 5px 0
      display flex
      color rgba(250, 250, 250, 0.8)

      .player-name
        width 150px

      .stats
        width 50px
        text-align right

      a
        color rgba(250, 250, 250, 0.8)
        text-decoration none

        &:hover
          text-decoration underline

  .join-discord
    margin 20px 0
    text-align center

    a
      color rgba(250, 250, 250, 0.8)
      font-weight bold
      text-decoration none

      &:hover
        text-decoration underline

