.scoreboard 
  margin 0 auto

  h1
    text-align center
    margin 50px 0
    font-size 22px
    font-family Orbitron, Arial, sans-serif
    text-transform uppercase
    letter-spacing 1px
    opacity 0.6

  h2
    margin-bottom 16px

  h3
    font-size 14px
    opacity 0.5
    margin-bottom 20px

  .username
    color inherit
    text-decoration none
    padding 7px 0
    width 236px
    float left
    opacity 0.8

    &:hover
      opacity 1

  .scores 
    margin-bottom 80px

  .recent-scores
    display flex
    flex-direction row
    justify-content space-between

    .game-mode-scores
      width 200px

    .user-score
      display flex
      align-items center

      .score
        margin-left auto

  .hall-of-fame
    overflow hidden
