.scoreboard 
  width 245px
  margin 0 auto

  h2 
    text-align center
    margin 50px 0
    font-size 22px
    font-family Orbitron, Arial, sans-serif
    text-transform uppercase
    letter-spacing 1px
    opacity 0.6

  .scores 
    margin-bottom 80px

  .user 
    font-size 19px
    padding 7px 0
    display flex

    .username 
      width 200px

      a 
        color inherit
        text-decoration none
        opacity 0.9

        &:hover 
          opacity 1

    .max-level 
      margin-left 20px
      width 25px
