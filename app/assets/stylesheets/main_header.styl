@import "_variables"

.main-header 
  $main-header-height = 40px

  height $main-header-height
  background #121212
  width 100%
  padding 0 15px
  text-transform uppercase

  .container
    display flex

  .logo 
    color #6D6D6D
    font-size 12px
    font-weight bold
    font-family $combo-indicator-font
    line-height $main-header-height + 2px
    letter-spacing 1.5px
    margin-right auto

    &:hover 
      color #ffe800
    
    i 
      font-size 15px
      margin-right 5px
    
    .large 
      font-size 16px

  a 
    color #6D6D6D
    text-decoration none
    font-size 11px
    letter-spacing 0.5px
    transition color 0.15s ease

    &:hover 
      color #e0e0e0

  .link-right 
    margin-right 3px
    margin-left 25px
    line-height $main-header-height

  .user-link
    font-weight bold

  .sign-in 
    color rgba(255,255,255,0.75)
