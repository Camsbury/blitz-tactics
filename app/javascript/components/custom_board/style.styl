.customize-board
  // customize board
  h2
    font-size 18px

  // click on any square to customize its color
  h3
    margin 8px 0
    opacity 0.5

  h4
    margin-bottom 10px

  .custom-board
    margin-top 25px
    display flex

    .right
      margin-left 20px

    .squares
      display flex
      margin-bottom 40px

    .square-color
      .square
        margin-right 10px
        width 60px
        height 60px

      input
        width 60px

    .action-buttons
      margin-top 40px

    button
      display block
