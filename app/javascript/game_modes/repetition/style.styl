@import "_variables"

.repetition-mode 

  .main
    display flex
    justify-content center

  .chessboard
    width $board-size
    height $board-size

  .sidebar
    margin 12px 0 0 12px
    text-align right
    width 50px

    .times
      font-size 20px
      line-height 28px

      .timer
        opacity 0.9

      .laps
        opacity 0.3

  // progress indicator under the main header for the current level
  .progress-bar 
    background black
    width 100%
    height 3px

    .progress 
      background yellow
      width 0
      height 100%
      transition width 0.5s ease-in-out, background 0.3s ease-in-out

      &.complete 
        width 100%
        background #63F706

