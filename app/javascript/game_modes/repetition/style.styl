@import "_variables"

.repetition-mode 

  .board-area, .chessboard
    width $board-size
    height $board-size
    margin 0 auto

  // progress indicator under the main header for the current level
  .progress-bar 
    background black
    width 100%
    height 3px

    .progress 
      background yellow
      width 0
      height 100%
      transition width 0.5s ease-in-out, background 0.3s ease-in-out

      &.complete 
        width 100%
        background #63F706
