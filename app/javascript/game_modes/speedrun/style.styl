@import "_variables"

.speedrun-mode
  $board-size = 500px

  margin-top 20px

  .above-board
    width $board-size
    margin 0
    transition opacity 0.5s ease

    .speedrun-complete
      padding-top 40px
      font-size 30px
      font-family $combo-indicator-font
      letter-spacing 2.5px
      text-align center

  .board-container
    display flex
    margin-top 15px

  .chessboard
    width $board-size
    height $board-size
    margin 0 auto

  .speedrun-sidebar
    margin-left 30px
    font-size 16px
    position relative

    .timer
      font-size 40px
      transition all 0.1s ease

      &.stopped
        opacity 0.3

      &.complete
        color #ffff00

    .speedrun-instructions
      font-size 17px
      line-height 26px
      width 170px
      position absolute
      top 100px

    .progress
      margin-top 70px
      opacity 0.7

    .personal-best
      margin-top 60px
      font-size 24px
      line-height 36px
