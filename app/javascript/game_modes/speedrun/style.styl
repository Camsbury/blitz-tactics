.speedrun-mode
  margin-top 20px

  .chessboard
    width 500px
    height 500px
    margin 0 auto

  .board-container
    display flex

  .speedrun-sidebar
    margin-left 30px
    font-size 16px
    position relative

    .timer
      font-size 40px

      &.stopped
        opacity 0.3

    .speedrun-instructions
      font-size 17px
      line-height 26px
      width 170px
      position absolute
      top 100px

    .progress
      margin-top 70px
      opacity 0.7
