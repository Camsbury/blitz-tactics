.speedrun-mode
  $board-size = 500px

  margin-top 20px

  .above-board
    width $board-size
    margin 0

  .board-container
    display flex
    margin-top 15px

  .chessboard
    width $board-size
    height $board-size
    margin 0 auto

  .speedrun-sidebar
    margin-left 30px
    font-size 16px
    position relative

    .timer
      font-size 40px

      &.stopped
        opacity 0.3

    .speedrun-instructions
      font-size 17px
      line-height 26px
      width 170px
      position absolute
      top 100px

    .progress
      margin-top 70px
      opacity 0.7
