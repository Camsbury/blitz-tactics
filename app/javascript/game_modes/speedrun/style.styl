@import "_variables"

.speedrun-mode
  $board-size = 500px
  $timer-font-size = 40px

  .container
    display flex

  .above-board
    width $board-size
    margin 0
    transition opacity 0.5s ease

  .speedrun-complete
    width $board-size
    font-size 30px
    font-family $combo-indicator-font
    letter-spacing 2.5px
    text-align center
    position absolute
    top 40px

  .chessboard
    width $board-size
    height $board-size
    margin 0 auto

  .speedrun-sidebar
    margin-top $above-board-height
    margin-left 30px
    font-size 16px
    position relative

    .timer
      font-size $timer-font-size
      transition all 0.1s ease

      &.stopped
        opacity 0.3

      &.complete
        color #ffff00

    .speedrun-instructions
      font-size 17px
      line-height 26px
      width 150px
      position absolute
      top 57px

    .progress
      margin-top 20px
      opacity 0.7

    .personal-best
      margin-top 60px
      font-size 16px
      line-height 36px

      .personal-best-time
        font-size $timer-font-size
        margin-bottom 9px
