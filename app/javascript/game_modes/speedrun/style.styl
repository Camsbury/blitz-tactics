@import "_variables"

.speedrun-mode
  $board-size = 500px

  .container
    display flex

  .above-board
    width $board-size
    margin 0
    transition opacity 0.5s ease

  .speedrun-complete
    width $board-size
    font-size 30px
    font-family $combo-indicator-font
    letter-spacing 2.5px
    text-align center
    position absolute
    top 40px

  .board-area, .chessboard
    width $board-size
    height $board-size
    margin 0 auto

  .speedrun-sidebar
    margin-top $above-board-height
    margin-left 30px
    display flex
    flex-direction column

    > div
      margin-bottom 40px

      &:last-child
        margin 0

    .speedrun-instructions
      font-size 17px
      line-height 26px
      width 150px

    .speedrun-stats
      .timer
        font-size 40px
        transition all 0.1s ease
        margin-bottom 20px

        &.stopped
          opacity 0.3

        &.complete
          color #ffff00

      .description
        font-size 16px

      &.current-run .description
        opacity 0.7

      &.personal-best
        display none
