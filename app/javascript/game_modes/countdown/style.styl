@import "_variables"

.countdown-mode
  $board-size = 500px

  .container
    display flex

  .above-board
    width $board-size
    margin 0
    transition opacity 0.5s ease

  .countdown-complete
    color #34FF00
    width $board-size
    font-size 30px
    font-family $combo-indicator-font
    letter-spacing 2.5px
    text-align center
    position absolute
    top 40px

  .board-area, .chessboard
    width $board-size
    height $board-size
    margin 0 auto

  .countdown-sidebar
    margin-top $above-board-height
    margin-left 30px
    display flex
    flex-direction column
    justify-content space-evenly

    .make-a-move
      line-height 26px
      opacity 0.7

    .timers
      height 100%
      display flex
      flex-direction column
      align-items center
      justify-content space-evenly

      .timer
        font-size 40px
        transition all 0.2s ease
        margin-bottom 20px

        &.stopped
          opacity 0.3

        &.penalized
          color red

        &.complete
          color #ffff00

      .description
        font-size 16px
        line-height 22px
        height 44px
        margin-left 1px
        opacity 0.7
